
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-4 text-center">Roles Section</h1>
<a class="btn btn-primary my-2" asp-action="Create">Create Role</a>
@{
if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(c => c.Name)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td><a asp-action="Details" asp-route-id="@c.Id" class="btn btn-warning">Details</a></td>
                    <td><a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-info">update</a></td>
                    <td><a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
<h2 class="bg-warning">No Roles Available</h2>
}
}

