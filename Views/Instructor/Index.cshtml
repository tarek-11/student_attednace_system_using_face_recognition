
@model IEnumerable<InstructorModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-4 text-center">Instructors Section</h1>
<a class="btn btn-primary my-2" asp-action="Create">Create Instructor</a>

@{
if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(c => c.Name)</th>
                <th>@Html.DisplayNameFor(c => c.Age)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Age</td>
                    <partial name="TableBottons" model="@c.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="bg-warning">No Instructors Available</h2>
}
}

